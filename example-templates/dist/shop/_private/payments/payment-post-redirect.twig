{#
Outputs a payment redirect page.

@var actionUrl string
@var inputs    string
#}
<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <title>{{ 'Redirecting'|t }}...</title>
</head>
<body onload="document.forms[0].submit();">
<form action="{{ actionUrl|raw }}" method="post">
  <p style="color:green">{{ 'Redirecting to payment page'|t }}...</p>
  <p>
    {{ inputs|raw }}
    {{ tag('button', {
      type: 'submit',
      text: 'Continue'|t
    }) }}
  </p>
</form>
</body>
</html>
