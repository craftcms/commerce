{% extends 'shop/_private/layouts' %}

{% block main %}
  <!-- Template: {{ _self }}.twig -->
  <h1 class="text-xl font-bold">
    {{- 'Forgot Password?'|t -}}
  </h1>

  <div class="max-w-md mt-3">
    <div class="bg-gray-100 border-blue-300 border-b-2 p-6">
      <form method="post" accept-charset="UTF-8">
        {{ csrfInput() }}
        {{ actionInput('users/send-password-reset-email') }}
        {{ redirectInput('shop/checkout/register-signin') }}

        <label for="loginName">
          {{- 'Username or email'|t -}}
        </label>
        <div class="mt-1">
          {{ input('text', 'loginName', loginName ?? craft.app.user.rememberedUsername, {
           id: 'loginName',
            class: ['w-full', 'border border-gray-300 hover:border-gray-500 px-4 py-2 leading-tight rounded']
          }) }}
        </div>

        {% if errors is defined %}
          {{ ul(errors, {
            class: 'mt-3',
            itemOptions: {
              class: 'text-red-700'
            }
          }) }}
        {% endif %}

        <div class="mt-3 text-right">
          {{ tag('button', {
            type: 'submit',
            class: 'cursor-pointer rounded px-4 py-2 inline-block bg-blue-500 hover:bg-blue-600 text-white hover:text-white',
            text: 'Submit'|t
          }) }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}
