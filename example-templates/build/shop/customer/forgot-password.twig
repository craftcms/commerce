{% extends 'shop/_private/layouts' %}

{% block main %}
    <!-- Template: {{ _self }}.twig -->
    <h1 class="text-xl font-bold">Forgot Password?</h1>

    <div class="max-w-md mt-3">
        <div class="bg-gray-100 border-blue-300 border-b-2 p-6">
            <form method="post" accept-charset="UTF-8">
                {{ csrfInput() }}
                {{ actionInput('users/send-password-reset-email') }}
                {{ redirectInput('shop/checkout/register-signin') }}

                <label for="loginName">Username or email</label>
                <div class="mt-1">
                    <input type="text"
                           id="loginName"
                           name="loginName"
                           class="border border-gray-300 hover:border-gray-500 px-4 py-2 leading-tight rounded w-full"
                           value="{% if loginName is defined %}{{ loginName }}{% else %}{{ craft.app.user.rememberedUsername }}{% endif %}"/>
                </div>

                {% if errors is defined %}
                    <ul class="mt-3">
                        {% for error in errors %}
                            <li class="text-red-700">{{ error }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}

                <div class="mt-3 text-right">
                    <button type="submit"
                            class="cursor-pointer rounded px-4 py-2 inline-block bg-blue-500 hover:bg-blue-600 text-white hover:text-white">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
