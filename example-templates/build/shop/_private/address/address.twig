{% set boldKeys = ['attention', 'name', 'organization'] %}
<!-- Template: {{ _self }}.twig -->
<ul>
    {% for key, line in address.addressLines %}
        <li>
            {% if key in boldKeys %}
            <strong>{% if key == 'attention' %}Attn:{% endif %}
                {% endif %}
                {{ line }}
                {% if key in boldKeys %}
            </strong>
            {% endif %}
        </li>
    {% endfor %}
</ul>
