{% extends 'shop/_private/layouts' %}

{% block main %}
    <!-- Template: {{ _self }}.twig -->
    <form method="post" action="" class="">
        {{ actionInput('commerce/cart/load-cart') }}
        {{ redirectInput('/shop/cart') }}
        {{ csrfInput() }}

        <h1 class="text-xl font-bold">Load Cart</h1>
        <p>Enter a cart number to load that cart into the current session.</p>

        <fieldset class="bg-gray-100 border-blue-300 border-b-2 p-6 mt-3 max-w-lg">
            <div>
                <label for="number">Cart Number</label>
                <div>
                    <input type="text"
                           id="number"
                           name="number"
                           value=""
                           class="border border-gray-300 hover:border-gray-500 px-4 py-2 leading-tight rounded w-full"
                           placeholder="7e89fh0ew8034â€¦"/>
                </div>
            </div>
            <div class="mt-3 text-right">
                <button type="submit" class="cursor-pointer rounded px-4 py-2 inline-block bg-blue-500 hover:bg-blue-600 text-white hover:text-white">Load cart</button>
            </div>
        </fieldset>
    </form>
{% endblock %}