{% extends '[[folderName]]/_private/layouts' %}

{% block main %}
  <!-- Template: {{ _self }}.twig -->
  <h1 class="text-xl font-bold">
    {{- 'Forgot Password?'|t -}}
  </h1>

  <div class="max-w-md mt-3">
    <div class="[[classes.box.base]]">
      <form method="post" accept-charset="UTF-8">
        {{ csrfInput() }}
        {{ actionInput('users/send-password-reset-email') }}
        {{ redirectInput('[[folderName]]/checkout/register-signin') }}

        <label for="loginName">
          {{- 'Username or email'|t -}}
        </label>
        <div class="mt-1">
          {{ input('text', 'loginName', loginName ?? craft.app.user.rememberedUsername, {
           id: 'loginName',
            class: ['w-full', '[[classes.input]]']
          }) }}
        </div>

        {% if errors is defined %}
          {{ ul(errors, {
            class: 'mt-3',
            itemOptions: {
              class: 'text-red-700'
            }
          }) }}
        {% endif %}

        <div class="mt-3 text-right">
          {{ tag('button', {
            type: 'submit',
            class: '[[classes.btn.base]] [[classes.btn.mainColor]]',
            text: 'Submit'|t
          }) }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}
