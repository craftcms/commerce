{% extends '[[folderName]]/_private/layouts' %}

{% block main %}
    <!-- Template: {{ _self }}.twig -->
    <form method="post" action="" class="">
        {{ actionInput('commerce/cart/load-cart') }}
        {{ redirectInput('/[[folderName]]/cart') }}
        {{ csrfInput() }}

        <h1 class="text-xl font-bold">Load Cart</h1>
        <p>Enter a cart number to load that cart into the current session.</p>

        <fieldset class="[[classes.box.base]] mt-3 max-w-lg">
            <div>
                <label for="number">Cart Number</label>
                <div>
                    <input type="text"
                           id="number"
                           name="number"
                           value=""
                           class="[[classes.input]] w-full"
                           placeholder="7e89fh0ew8034â€¦"/>
                </div>
            </div>
            <div class="mt-3 text-right">
                <button type="submit" class="[[classes.btn.base]] [[classes.btn.mainColor]]">Load cart</button>
            </div>
        </fieldset>
    </form>
{% endblock %}