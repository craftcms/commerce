{% extends "commerce/_layouts/settingscp" %}

{% set crumbs = [
{ label: "Commerce Settings"|t, url: url('commerce/settings') },
{ label: "Order Types"|t, url: url('commerce/settings/ordertypes') },
] %}


{% set selectedTab = 'settings' %}
{% import "_includes/forms" as forms %}


{% block content %}
<form method="post" accept-charset="UTF-8" data-saveshortcut>
    <input type="hidden" name="action" value="commerce/orderTypes/saveOrderType">
    <input type="hidden" name="redirect" value="commerce/settings/ordertypes">

    {{ getCsrfInput() }}
    {% if orderType.id %}<input type="hidden" name="orderTypeId" value="{{ orderType.id }}">{% endif %}

    {% set tabs = {
        0: {'label':'Name & Info','url':'#tab0'},
        1: {'label':'Statuses','url':'#tab1'},
        2: {'label':'Fields','url':'#tab2'}
        }
    %}

    <div id="tab0">

    {{ forms.textField({
        first: true,
        label: "Name"|t,
        instructions: "What this order type will be called in the CP."|t,
        id: 'name',
        name: 'name',
        value: orderType.name,
        errors: orderType.getErrors('name'),
        autofocus: true,
        required: true,
        translatable: true
    }) }}

    {{ forms.textField({
        label: "Handle"|t,
        instructions: "How youâ€™ll refer to this order type in code or templates."|t,
        id: 'handle',
        class: 'code',
        name: 'handle',
        value: orderType.handle,
        errors: orderType.getErrors('handle'),
        required: true
    }) }}

    </div>

    <div id="tab1" class="hidden">

    </div>

    <div id="tab2" class="hidden">

    {% include "_includes/fieldlayoutdesigner" with {
    fieldLayout: orderType.getFieldLayout(),
    } only %}


    </div>

    <hr>

    <div class="buttons">
        <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
    </div>
</form>
{% endblock %}

{% includejs %}
{% if not orderType.handle %}new Craft.HandleGenerator('#name', '#handle');{% endif %}
{% endincludejs %}
