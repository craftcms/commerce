{% extends "commerce/_layouts/cp" %}

{% set crumbs = [
{ label: "Products"|t, url: url('commerce/products') },
{ label: product.title, url: url(product.cpEditUrl) },
] %}

{% import "_includes/forms" as forms %}

{% set content %}

{% set moreTabs = {
    0: {'label':'Variant','url':'#variant'},
} %}

{%  set tabs = moreTabs|merge(tabs) %}

<form method="post" accept-charset="UTF-8" data-saveshortcut>
    <input type="hidden" name="action" value="commerce/variants/save">
    <input type="hidden" name="redirect" value="{{ product.cpEditUrl }}">
    {{ getCsrfInput() }}

    {% set variantForm %}
        {%  include "commerce/_includes/variant/fields" with {'variant':variant}%}
    {% endset %}

    <div id="variant">
    {{ forms.field({
        id:       'variant',
        label:    'Variant'
    }, variantForm) }}
    </div>

    {% for tab in productType.asa('variantFieldLayout').getFieldLayout().getTabs() %}
        <div id="tab{{ loop.index }}" class="hidden">
            {% include "_includes/fields" with {
            fields: tab.getFields(),
            element: variant,
            static: (static is defined ? static : false)
            } only %}
        </div>
    {% endfor %}


    <div class="buttons">
        <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
    </div>
</form>


{% endset %}
