{% extends "commerce/_layouts/settings" %}

{% set selectedTab = 'registration' %}

{% includecssresource 'commerce/registration.css' %}

{% import "_includes/forms" as forms %}


{% block content %}
    {# Valid license header #}
    <div id="valid-license-header" class="reg-header{% if licenseKeyStatus != 'valid' %} hidden{% endif %}">
        <img src="{{ resourceUrl('commerce/registered-icon.svg') }}" width="100" height="100">
        <h2>{{ "Commerce is registered."|t }}</h2>
        <p class="light">{{ "Thanks for your support!"|t }}</p>
    </div>

    {# Invalid license header #}
    <div id="invalid-license-header" class="reg-header{% if licenseKeyStatus != 'invalid' %} hidden{% endif %}">
        <img class="license-alert-img" src="{{ resourceUrl('commerce/invalid-icon.svg') }}" width="70" height="70">
        <h2>{{ "Your license key is invalid."|t }}</h2>
        <p class="light">{{ "Please enter a valid license key below."|t }}</p>
    </div>

    {# Mismatched license header #}
    <div id="mismatched-license-header" class="reg-header{% if licenseKeyStatus != 'mismatched' %} hidden{% endif %}">
        <img class="license-alert-img" src="{{ resourceUrl('commerce/invalid-icon.svg') }}" width="70" height="70">
        <h2>{{ "Your license key is being used on another Craft site."|t }}</h2>
        <p class="light">{{ "Please enter a new license key below, or transfer your license to this Craft install."|t }}</p>
    </div>

    {# Unknown license header #}
    <div id="unknown-license-header" class="reg-header{% if licenseKeyStatus != 'unknown' %} hidden{% endif %}">
        <img src="{{ resourceUrl('commerce/icon.svg') }}" width="100" height="100">
        <h2>{{ "Thanks for trying Craft Commerce."|t }}</h2>
        <p class="light">{{ "When youâ€™re ready to start accepting payments, buy a license on {url} and enter your license key below."|t({url: '<a href="https://craftcommerce.com">craftcommerce.com</a>'})|raw }}</p>
    </div>

    <hr>

    {# Valid license view #}
    <div id="valid-license-view" class="reg-view{% if licenseKeyStatus != 'valid' %} hidden{% endif %}">
        <div class="meta license-meta">
            <div class="data">
                <h5 class="heading">{{ "License Key"|t }}</h5>
                <div id="license-key-label" class="value code">{{ licenseKey }}</div>
            </div>
        </div>

        <form id="unregister-license-form" class="indented">
            <div class="buttons">
                <input type="submit" class="btn" value="{{ 'Unregister from this Craft install'|t }}">
                <div id="unregister-license-spinner" class="spinner hidden"></div>
            </div>
        </form>
    </div>

    {# Invalid/Unknown/Mismatched license view #}
    <div id="update-license-view" class="reg-view{% if licenseKeyStatus == 'valid' %} hidden{% endif %}">
        <div class="meta license-meta">
            <div class="data">
                <label class="heading" for="license-key">{{ "License Key"|t }}</label>
                <form id="update-license-form" class="value">
                    <div id="license-key-wrapper" class="texticon clearable">
                        {{ forms.text({
                            id: 'license-key-input',
                            name: 'licenseKey',
                            placeholder: '    -    -    -    -    -',
                            class: 'code'~(licenseKeyStatus == 'invalid' ? ' error'),
                            maxlength: 29,
                            size: 29,
                            value: licenseKey
                        }) }}
                        <div id="clear-license-btn" class="clear{% if not licenseKey %} hidden{% endif %}" title="{{ 'Clear'|t }}"></div>
                    </div>
                    <input id="update-license-btn" type="submit" class="btn submit disabled" value="{{ 'Update'|t }}">
                    <div id="update-license-spinner" class="spinner hidden"></div>
                </form>
            </div>
            <p id="license-key-error" class="error indented hidden"></p>
        </div>

        <form id="transfer-license-form" class="indented{% if licenseKeyStatus != 'mismatched' %} hidden{% endif %}">
            <div class="buttons">
                <input type="submit" class="btn" value="{{ 'Transfer to this Craft install'|t }}">
                <div id="transfer-license-spinner" class="spinner hidden"></div>
            </div>
        </form>
    </div>
{% endblock %}


{% includejsresource 'commerce/js/CommerceRegistrationForm.js' %}
{% includejs %}
    window.regForm = new Craft.Commerce.RegistrationForm('{{ licenseKey|e("js") }}', '{{ licenseKeyStatus|e("js") }}');
{% endincludejs %}
