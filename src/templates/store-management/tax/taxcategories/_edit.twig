{% extends "commerce/_layouts/store-management" %}
{% set isIndex = false %}

{% set crumbs = [
    { label: "Tax Categories"|t('commerce'), url: store.getStoreSettingsUrl('taxcategories') },
] %}

{% set fullPageForm = true %}

{% import "_includes/forms" as forms %}

{% block details %}
    {% if taxCategory and taxCategory.id %}
        <div class="meta read-only">
            <div class="data">
                <h5 class="heading">{{ "Created at"|t('app') }}</h5>
                <div id="date-created-value" class="value">{{ taxCategory.dateCreated|datetime('short') }}</div>
            </div>
            <div class="data">
                <h5 class="heading">{{ "Updated at"|t('app') }}</h5>
                <div id="date-updated-value" class="value">{{ taxCategory.dateUpdated|datetime('short') }}</div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block content %}
    {{ actionInput('commerce/tax-categories/save') }}
    {{ redirectInput(store.getStoreSettingsUrl('taxcategories')) }}
    {% if taxCategory.id %}{{ hiddenInput('taxCategoryId', taxCategory.id) }}{% endif %}

    {% include "commerce/store-management/tax/taxcategories/_fields" %}
{% endblock %}
